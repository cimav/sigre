<div id="screen-name">
  <h3>Departamentos</h3>
  {{#link-to 'departamentos.new' tagName="button" classNames="btn btn-success"}}<span title="Agregar nuevo departamento" class="glyphicon glyphicon-plus"></span>{{/link-to}}
</div>

<div id="md-search-panel" class="col-sm-3">
    <div id="md-search-box">
      <div class="input-group">
	      {{input type="text" value=searchText placeholder="Buscar departamento..." classNames="form-control"}}
		    <div class="input-group-btn">
		      <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
		    </div>
	    </div>
    </div>
    <div id="md-items-list">
      {{#each}}
        {{#link-to 'departamento' this tagName="div" classNames="md-item"}}
          <div class="md-item-inner">
            <div class="media">
              <div class="media-object pull-left"><span class="glyphicon glyphicon-briefcase"></span></div>
              <div class="media-body">
                <div class="media-heading">{{nombre}}<br/>Sede</div>
              </div>
            </div>
           </div>
        {{/link-to}}
      {{/each}}
    </div>
    <div id="md-items-info">
    {{departamentosCount}} departamentos
    </div>
  </div>
  <div id="md-main-panel" class="col-sm-7">
    {{outlet}}
  </div>