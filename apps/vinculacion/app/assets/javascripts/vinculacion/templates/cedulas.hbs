<div id="solicitud-cedulas-header">
  <div id="cedulas-title">
    <h4>CÃ©dulas de control de costos</h4>
  </div>
  <div id="cedulas-wrapper">
    <table id="tabla-datos">
      <tr>
        <td id="columna-cliente">
          <div id="cliente-nombre">{{cliente.razon_social}}</div>
          <div class="contacto-nombre">{{contacto.nombre}}</div>
          <div class="contacto-tel">{{contacto.telefono}}</div>
          <div class="contacto-email">{{contacto_email}}</div>
        </td>
        <td id="columna-costos">
          <table>
            <tr>
              <td><span class="cedula-etiqueta">orden compra</span></td>
              <td><span class="cedula-costo-valor">{{orden_compra}}</span></td>
            </tr>
            <tr>
              <td><span class="cedula-etiqueta">precio venta</span></td>
              <td><span class="cedula-costo-valor">{{formatCurrency precio_venta}}</span></td>
            </tr>
            <tr>
              <td><span class="cedula-etiqueta">costo interno acumulado</span></td>
              <td><span class="cedula-costo-valor">{{formatCurrency costo_interno}}</span></td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
  <div id="cedulas-list">
    <ul class="nav nav-pills">
      {{#each cedula in cedulas}}
        {{#link-to 'cedula' cedula tagName="li"}}<a href="#"><span class="cedula-codigo">{{cedula.codigo}}</span> </a>{{/link-to}}
      {{/each}}
    </ul>
  </div>

</div>

<div id="cedulas-workarea">
  {{outlet}}
</div>
