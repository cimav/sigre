<h3>{{rfc}}</h3>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
    <li class="active"><a href="#datos" data-toggle="tab">Datos</a></li>
    <li><a href="#contactos" data-toggle="tab">Contactos</a></li>
</ul>


<div class="tab-content">
    <div class="tab-pane" id="datos">
        {{#form-for controller}}
            {{input rfc label='RFC'}}
            {{input nombre}}
        {{/form-for}}
        <div class="btn-group">
            <button type="submit"
                    class="btn btn-primary" {{bind-attr disabled=this.isNotReadyForSave}} {{action "update" this target='controller'}} >
                {{#if item.isSaving}}
                    <span class="spin glyphicon glyphicon-refresh"></span>
                    Guardando...
                {{else}}
                    Guardar
                {{/if}}
            </button>
            <button class="btn btn-inverse" {{action "destroy" this target='controller'}} >Eliminar</button>
        </div>

    </div>
    <div class="tab-pane" id="contactos">
        <h1>Not yet</h1>
    </div>
</div>

