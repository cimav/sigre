<div class="cliente-form">
    <h3>Nuevo</h3>

  {{#form-for controller}}

      <div class="col-sm-8">
          <div class="proyecto-rfc">
              <strong>RFC</strong><br/>
            {{input-field rfc}}
          </div>
          <div class="proyecto-razon-social">
              <strong>Razón social</strong><br/>
            {{input-field razon_social}}
          </div>
          <div class="proyecto-num-empleados">
              <strong>Num. empleados</strong><br/>
            {{view App.NumberField value=num_empleados classNames="form-control input-sm" min="0"}}
              <div class="clearfix"></div>
          </div>
          <div class="proyecto-direccion">
              <strong>Dirección (calle y núm)</strong><br/>
            {{input-field calle_num }}
          </div>
          <div class="proyecto-colonia">
              <strong>Colonia</strong><br/>
            {{input-field colonia}}
          </div>
          <div class="proyecto-cp">
              <strong>CP</strong><br/>
            {{view App.NumberField value=cp classNames="form-control input-sm" min="0"}}
              <div class="clearfix"></div>
          </div>
          <div class="proyecto-telefono">
              <strong>Teléfono</strong><br/>
            {{input-field telefono as="tel"}}
          </div>
          <div class="proyecto-fax">
              <strong>Fax</strong><br/>
            {{input-field fax as="tel"}}
          </div>
          <div class="proyecto-email">
              <strong>Email</strong><br/>
            {{input-field email as="email"}}
          </div>
      </div>


      <div class="form-group">
          <div class="col-sm-6">
              <button type="submit"
                      class="btn btn-primary" {{bind-attr disabled=this.isNotReadyForSave}} {{action "create" this target='controller'}} >
                {{#if item.isSaving}}
                    <span class="spin glyphicon glyphicon-refresh"></span>
                    Guardando...
                {{else}}
                    Guardar
                {{/if}}
              </button>
          </div>
      </div>

  {{/form-for}}
</div>

