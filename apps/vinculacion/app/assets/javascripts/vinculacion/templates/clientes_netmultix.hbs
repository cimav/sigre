<div id="screen-name" class="header-catalogo">
  <h3>Clientes de Netmultix <span class="badge badge-muestras">{{this.length}}</span></h3>
</div>

<div id="md-general-panel" class="main-catalogo">

  <div id="md-items-list">
    <table class="table table-striped table-bordered">
      <tr>
        <th>Clave</th>
        <th>RFC</th>
        <th>Nombre</th>
        <th>Tel√©fono</th>
        <th>Empleados</th>
      </tr>
      {{#each}}
        <tr>
          <td>
            {{#if has_contactos}}
              <a data-toggle="collapse"  {{bind-attr href=this.collapsable_href}}>{{cl01_clave}}</a>
            {{else}}
              {{cl01_clave}}
            {{/if}}
          </td>
          <td>{{cl01_rfc}}</td>
          <td>{{cl01_nombre}}</td>
          <td>{{telefono}}</td>
          <td>{{cl01_empleados}}</td>
        </tr>
        <tr>
          <td colspan="3" class="td-panel-conceptos">
            <div class="panel-group">
                <div {{bind-attr id=this.collapsable_id}} class="panel-collapse collapse">
                  <div class="panel-body">



                    <table class="table table-striped table-bordered">
                      <tr>
                        <th>Contacto</th>
                        <th>Email</th>
                      </tr>
                      {{#each contactos_netmultix}}
                        <tr>
                          <td>{{cl06_contacto}}</td>
                          <td>{{cl06_email}}</td>
                        </tr>
                      {{/each}}
                    </table>



                  </div>
                </div>
            </div>
          </td>
        </tr>
      {{/each}}
    </table>
  </div>
</div>

