<div id="servicios-list">
   <ul class="nav nav-pills nav-stacked affix-top">
    {{#link-to 'servicios.resumen' tagName="li"}}<a href="#"><span class="resumen glyphicon glyphicon-list"></span> Resumen</a>{{/link-to}}
    {{#each}}
      {{#link-to 'servicio' this tagName="li"}}<a href="#"><span class="consecutivo">{{consecutivo}}</span> <span class="servicio-nombre">{{nombre}}</span></a>{{/link-to}}
    {{/each}}
    {{#link-to 'servicios.new' tagName="li"}}<a href="#"><span class="add">+</span> Agregar servicio</a>{{/link-to}}
  </ul>
</div>
<div id="servicios-workarea" data-spy="scroll" data-target="#servicios-list">
  {{outlet}}
</div>
