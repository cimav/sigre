<h3>Resumen</h3>
<table class="table resumen">
  <tbody>
    {{#each controllers.solicitud.servicios}}
      {{#link-to 'servicio' this tagName="tr"}}
        <td>{{nombre}}</td>
        <td><img class="empleado-avatar img-circle" {{bind-attr src=empleado.avatar_url}} {{bind-attr title=empleado.nombre_completo}} /></td>
        <td>{{status}}</td>
      {{/link-to}}
    {{/each}}
  </tbody>
  <tfoot>
    <tr class="total"><td>Total: </td><td>{{costototal}}</td></tr>
  </tfoot>
</table>